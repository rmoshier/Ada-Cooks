<h1>Recipes#New</h1>
<%= form_for @recipe, url: {action: "create"} do |f| %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.label :procedure %><br>
    <%= f.text_field :procedure %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back to All Recipes', recipes_path %>
<br>
<%= link_to 'Home', "/" %>
